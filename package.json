{
	"name": "vsc-open-all-files-in-directory",
	"displayName": "vsc-open-all-files-in-directory",
	"description": "Open All Files in Directory or Subfolders",
	"version": "0.0.1",
	"publisher": "EuroCent",
	"license": "MIT",
	"repository": {
		"url": ""
	},
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vsc-open-all-files-in-directory.currentOpenAllDirFiles",
		"onCommand:vsc-open-all-files-in-directory.currentOpenAllDirFilesDepth"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsc-open-all-files-in-directory.currentOpenAllDirFiles",
				"title": "Open All Files"
			},
			{
				"command": "vsc-open-all-files-in-directory.currentOpenAllDirFilesDepth",
				"title": "Open All Files with Subfolders"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "vsc-open-all-files-in-directory.currentOpenAllDirFiles"
				},
				{
					"command": "vsc-open-all-files-in-directory.currentOpenAllDirFilesDepth"
				}
			],
			"editor/title/context": [
				{
					"command": "vsc-open-all-files-in-directory.currentOpenAllDirFiles"
				},
				{
					"command": "vsc-open-all-files-in-directory.currentOpenAllDirFilesDepth"
				}
			]
		},
		"configuration": {
			"title": "Open Files In Directory Configuration",
			"properties": {
				"vsc-open-all-files-in-directory.maximumFiles": {
					"type": "number",
					"default": 3,
					"description": "Maximum number of files to open in one action."
				},
				"vsc-open-all-files-in-directory.maximumFolderDepth": {
					"type": "number",
					"default": 1,
					"description": "Maximum number of depth subfolders."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"ts-loader": "^9.3.1",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0",
		"@vscode/test-electron": "^2.1.5"
	}
}